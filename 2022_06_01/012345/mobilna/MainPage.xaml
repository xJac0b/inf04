<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Turystyka.MainPage">

    <StackLayout Padding="0,20,0,0">
        <Label FontSize="Title">Domek w górach</Label>
        <Image Aspect="Fill" Source="obraz.jpg"/>
        <StackLayout Orientation="Horizontal" BackgroundColor="Teal">
            <Button BackgroundColor="Teal" TextColor="White" Text="POLUB" Clicked="Like_Button_Clicked"></Button>
            <Button BackgroundColor="Teal" TextColor="White" Text="USUŃ" Clicked="Remove_Button_Clicked"></Button>
            <Button BackgroundColor="Teal" TextColor="White" Text="ZAPISZ"></Button>
        </StackLayout>
        <Label x:Name="likesLabel" HorizontalOptions="End">0 polubień</Label>
        <BoxView HeightRequest="1" Color="Gray"></BoxView>
        <Line></Line>
        <Label FontAttributes="Bold">Opis:</Label>
        <Label TextColor="Gray"
            >Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych</Label>
    </StackLayout>

</ContentPage>
