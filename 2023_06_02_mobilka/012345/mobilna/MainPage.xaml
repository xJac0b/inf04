             x:Class="Czcionka.MainPage">

    <StackLayout Margin="20">
        <Label FontAttributes="Bold" FontSize="Title" TextColor="White" BackgroundColor="#558B2F">Właściwości czcionki</Label>
        <Label x:Name="rozmiar" FontSize="Medium">Rozmiar: </Label>
        <Slider x:Name="slider" ValueChanged="Slider_ValueChanged" Maximum="40"></Slider>
        <Label x:Name="cytat">Dzień dobry</Label>
        <Button Clicked="Button_Clicked" TextColor="White" HorizontalOptions="Center" BackgroundColor="#558B2F" Text=">>"></Button>
    </StackLayout>

</ContentPage>
